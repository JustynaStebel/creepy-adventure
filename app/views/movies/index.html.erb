<div class="movies">
  <% if current_user %>
  <h1>My movies</h1>

  <%= link_to 'New movie', action: 'new' %>
    <table>
      <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Description</th>
        <th>Category</th>
        <th>Cover</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><%= movie.category_name %></td>
        <td><%= image_tag movie.cover_url(:thumb) %></td>
        <td><%= link_to 'show', movie %>
            <%= link_to 'edit', edit_movie_path(movie) %>
            <%= link_to('destroy', movie, data: { confirm: 'Are you sure?' },
            method: 'delete') %></td>
      </tr>
      <% end %>
    </table>
  <% end %>
</div>
